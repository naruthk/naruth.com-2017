        // Begin Promotion Banner
        .feature-banner 
            .container
                .row
                    .col-xs-12.col-md-12.col-lg-12
                        a(href="media/Kongurai_Naruth_grad2018.pdf", title="Resume link")
                            i(class="fa fa-file-text", aria-hidden="true")
                        a(href="mailto:contact@naruthk.com", title="Email")
                            i(class="fa fa-envelope-o", aria-hidden="true")
                        a(href='http://www.github.com/naruthk', title='Github', target='_blank')

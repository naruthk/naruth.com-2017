                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            //- .collapse#moreProjects
                            .margin-t-20
                            .row
                                .col-sm-4.col-md-4.col-lg-4
                                    #projects-title
                                        p.title Projects
                            mixin project-box(title, description, src, modalTitle)
                                .row
                                    .project-box
                                        a(data-toggle='modal', data-target= modalTitle)
                                            //- .col-xs-3.col-sm-2.col-md-2.col-lg-2
                                            //-     img(src=src)
                                            //- .col-xs-9.col-sm-10.col-md-10.col-lg-10
                                            //-     p
                                            //-         = description
                                            .col-xs-12.col-sm-2.col-md-2.col-lg-2
                                                img(src=src)
                                                //- .margin-t-20
                                            .col-xs-12.col-sm-10.col-md-10.col-lg-10
                                                p
                                                    = description
                                                //- .margin-t-20
                            .container
                                h3 Website
                                .margin-t-20
                                +project-box(
                                    'Milo TH', 
                                    'Thailand Milo\'s Futsal Campaign 2017', 
                                    'img/logo_milo.png',
                                    '#miloThailand')
                                +project-box(
                                    'NIVEA TH', 
                                    'Blogger Review articles & Product Launches pages', 
                                    'img/logo_nivea.gif',
                                    '#niveaThailand')
                                +project-box(
                                    'SHOW DC Mall', 
                                    '"Visit Section" for Guests', 
                                    'img/logo_showdc.jpg',
                                    '#showdc')
                                +project-box(
                                    'Samsung Email', 
                                    'An email template (eDM) used for Samsung Thailand to send out to customers in Thailand.', 
                                    'img/logo_samsung.png',
                                    '#samsungEmail')
                                hr
                                h3 Mobile
                                .margin-t-20
                                +project-box(
                                    'Bitsee Discover', 
                                    'Android App for Discovering Online Content', 
                                    'img/logo_bitsee.png',
                                    '#modalBitsee')
                                +project-box(
                                    '7-Eleven DC Vote', 
                                    'An Android rating app used in more than 8,000 7-Eleven stores in Thailand.', 
                                    'img/logo_7-eleven.png',
                                    '#7ElevenApp')
                                hr
                                h3 Software
                                .margin-t-20
